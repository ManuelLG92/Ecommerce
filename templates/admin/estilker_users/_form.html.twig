<form action="{{ action }}" method="post" id="formCreateEstilkerUser" >
    {% if modo == 'editar' %}
        <input type="hidden" name="_method" value="PUT">
        <input type="hidden" name="idUser" value="{{ user.id }}">
    {% endif %}

    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title text-center">{{ modo|capitalize }} Usuario</h5>
            {#<div class="heading-elements">
                </div>#}
        </div>
        <hr>
        <div class="panel-body">
            <div class="form-group has-feedback" id="divValidation">
                <div class="row">
                    <label class="col-md-3 control-label text-right" for="email">Email de acceso <span class="text-danger">*</span></label>
                    <div class="col-md-6">
                        <input type="email" class="form-control" name="email" id="email" value="{{ user.email }}" autocomplete="off" required autofocus>
                        <div class="form-control-feedback">
                            <i id="symbol" class=""></i>
                        </div>
                        <span class="help-block" id="helper-name"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <label class="col-md-3 control-label text-right" for="role">Rol <span class="text-danger">*</span></label>
                    <div class="col-md-6">
                        <select name="role" id="role" class="select" required>
                            {% for index, role in roles %}
                                {% set selected = "" %}
                                {% if user.roles|length > 0 %}
                                    {% if  user.roles|last == role %}
                                        {% set selected = "selected" %}
                                    {% endif %}
                                {% endif %}
                                <option value="{{ index+1 }}" {{ selected }}>{{ role }}</option>
                            {% endfor %}
                        </select>

                        <div class="form-control-feedback">
                            <i id="symbol" class=""></i>
                        </div>
                        <span class="help-block" id="helper-confirm"></span>
                    </div>
                </div>
            </div>

            {% if modo == 'editar' %}
                <div id="changePasswordDiv">
                    <label class="col-md-3 control-label text-right"></label>
                    <div class="checkbox col-md-9">
                        <label for="changePassword">
                           Cambiar clave
                        </label>
                        <input type="checkbox" name="changePassword" id="changePassword">
                    </div>
                </div>
            {% endif %}

                <div class="col-md-12 text-center mt-20">


            <div id="passwordFields">
            <div class="form-group">
                <div class="row">
                <label class="col-md-3 control-label text-right" for="password">Clave <span class="text-danger">*</span></label>
                <div class="col-md-6">
                    <input type="password" class="form-control" name="password" id="password" autocomplete="off">
                    <div class="form-control-feedback">
                        <i id="symbol" class=""></i>
                    </div>
                    <span class="help-block" id="helper-password"></span>
                </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label class="col-md-3 control-label text-right" for="passwordConfirm">Confirma la clave <span class="text-danger">*</span></label>
                    <div class="col-md-6">
                        <input type="password" class="form-control" name="passwordConfirm" id="passwordConfirm" autocomplete="off">
                        <div class="form-control-feedback">
                            <i id="symbol" class=""></i>
                        </div>
                        <span class="help-block" id="helper-confirm"></span>
                    </div>
                </div>
            </div>
            <p  class="text-center" id="passwordComparisionInfo"></p>
            </div>
                </div>



            <div class="col-md-12 text-center mt-20">
                {#                    <input type="button" value="">#}
                <button type="button" id="createEstilkerUserBtn" class="btn btn-primary ">{{ btn_form|default('Crear')}}<i class="icon-arrow-right14 position-right"></i></button>
            </div>
        </div>
    </div>
</form>
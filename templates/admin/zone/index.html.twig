{% block body %}

    <!-- Basic datatable -->

    <div class="panel panel-flat container">
        <div class="panel-heading">
            <h5 class="panel-title text-center">Zonas</h5>
        </div>

        <div class="categoryTable">
        <table class="table text-center">
            <thead>
            <tr >
                <th class="text-center">Id</th>
                <th class="text-center">Nombre</th>
                <th class="text-center">Opciones</th>
            </tr>
            </thead>
            <tbody>

            {% for zone in zones %}
          <tr>
                <td class="text-center">{{ zone.id }}</td>
                <td class="text-center">{{ zone.name }}</td>
                <td class="text-center">
                    <span ><a href="{{ path('edit_zone_get', { id : zone.id }) }}"><button type="button" id="upButton" class="btn btn-xs btn-warning"><i class="icon-pencil6 position-left"></i>Editar</button></a></span>

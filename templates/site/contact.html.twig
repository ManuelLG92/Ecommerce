{% extends 'site/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-md-10 mx-auto">
            <div class="row">

                <div class="col-md-8 me-2">


                    <form action="{{ path('send_contact_form') }}" method="post" id="contactForm">

                        <div id="requiredFields">
                        <div class="row">
                            <h1 class="font-sofia-bold">Contacto</h1>

                            <div class="col">
                                <label for="name">Nombre <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Nombre" autofocus>
                                <span class="helperName"></span>
                            </div>

                            <div class="col">
                                <label for="surname">Apellidos <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="surname" name="surname" placeholder="Apellidos">
                                <span class="helperSurname"></span>
                            </div>

                        </div>

                        <div class="row mt-3">
                            <div class="col">
                                <label for="phone">Teléfono <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="phone" id="phone" placeholder="Telefono" pattern="[0-9]+">
                                <span class="helperPhone"></span>
                            </div>

                            <div class="col">
                                <label for="email">Email <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="email" id="email" placeholder="ejemplo@ej.es">
                                <span class="helperEmail"></span>
                            </div>

                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <label for="country">Pais <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="country" id="country" placeholder="Pais">
                                <span class="helperCountry"></span>
                            </div>
                            <div class="col">
                                <label for="region">Región <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="region" id="region"
                                       placeholder="Region">
                                <span class="helperRegion"></span>
                            </div>
                            <div class="col">
                                <label for="city">Ciudad <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="city" id="city" placeholder="Ciudad">
                                <span class="helperCity"></span>
                            </div>
                        </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <label for="additionalInfo" class="text-start">Informacion adicional: </label>
                                <textarea class="form-control" name="additionalInfo" id="additionalInfo" rows="5"
                                          cols="20"
                                          placeholder="Informacion adicional"></textarea>
                                <span class="helperInfo"></span>
                            </div>

                        </div>
                        <div class="row mt-3">
                            <div class="form-check ms-3">
                                <input class="form-check-input" type="checkbox"  id="checkBox" name="checkBox">
                                <label class="form-check-label" for="checkBox">
                                    Declaro leídas y aceptadas las condiciones de <a href="#">Aviso legal y Política de
                                        privacidad.</a>
                                </label>
                                <span class="helperCheck"></span>
                            </div>
                        </div>


                        <div class="text-center">
                        <button type="button" id="contactFormButton" class="btn estilker-color text-white p-1 pe-5 ps-5 mt-3 fs-5">
                            Enviar
                        </button></div>
                    </form>

                </div>

                <div class="col-md-3 mt-5">
                    <h2 class="font-sofia-bold">Teléfono</h2>
                    <p>PBX: (57 1) 240 0040</p>
                    <h2 class="font-sofia-bold">Email</h2>
                    <p><a href="mailto:servicioalcliente@estilkercolombia.co">servicioalcliente@estilkercolombia.co</a></p>
                    <h2 class="font-sofia-bold">Dirección</h2>
                    <p><span class="font-sofia-bold">BOGOTÁ D.C.:</span>  Calle 76 No. 61 - 28
                        PBX: (57 1) 240 0040 • FAX: (57 1) 547 4795</p>
                    <p><span class="font-sofia-bold">MEDELLÍN:</span> Calle 50 No. 56B - 40 • (57) 315 612 2792</p>
                    <p><span class="font-sofia-bold">CALI:</span> Carrera 8B No. 72 - 25 Barrio 7 de Agosto
                        (57 2 ) 662 4326 </p>
                    <p class="font-sofia-bold">COLOMBIA • AMÉRICA DEL SUR</p>

                </div>

            </div>


        </div>
    </div>
    <div class="mt-5">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3976.5364007541434!2d-74.08053828465201!3d4.676404243168435!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e3f9b02b67037ed%3A0x30c685631d25039c!2sEstilker%20Colombia%20SAS!5e0!3m2!1ses!2ses!4v1619076379796!5m2!1ses!2ses" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/app/site/jquery_numeric.js') }}"></script>
    <script src="{{ asset('js/app/site/contactForm.js') }}"></script>
    <script>
        $(document).ready(() => {
            $('.nav-bar-items a').removeClass('active-nav-page-border font-sofia-bold');
            $('#contact').addClass('active-nav-page-border font-sofia-bold')
        })

    </script>


{% endblock %}

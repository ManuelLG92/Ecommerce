{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
            crossorigin="anonymous"></script>

    <script src="{{ asset('js/core/libraries/jquery.min.js') }}"></script>
    <script src="{{ asset('js/app/site/loginControl.js') }}"></script>
    <script>

        $(document).ready(() => {

            const upArrow = $('#up-arrow')
            $('button[type=reset]').on('click', () => {

                $('#filterForm').find('input[type=checkbox]').each(() => {
                    if ($(this).prop('disabled') !== true) {
                        $(this).prop('checked', false);
                    }
                })
            })

            $(upArrow).hide()
            $(window).scroll(function () {
                if (window.matchMedia("(max-width: 994px)").matches) {
                    $(upArrow).show()
                } else {
                    if ($(this).scrollTop() > 300) {
                        $(upArrow).fadeIn();
                    } else {
                        $(upArrow).fadeOut();
                    }
                }

            });

            $(upArrow).on('click', () => {
                $('html, body').animate({scrollTop: 0}, 800);
            })

            const contactHelperIcon = $('.contact-helper-icon')
            const contactHelperBody = $('.contact-helper-body')
            const linkContactHelper = $('.link-contact-helper')
            contactHelperIcon.add(linkContactHelper).on('click', () => {
                if (contactHelperBody.css('display') === 'none') {
                    contactHelperBody.fadeIn()
                } else {
                    contactHelperBody.fadeOut()
                }
            })
        })
    </script>

